<body>
	<h2>画像</h2>
	<%= attachment_image_tag @dog, :image, :fill, 300, 300, format: 'jpeg', size: "300x300" %>
	<p>タイトル</p>
	<span><%= @dog.title %></span>
	<p>説明</p>
	<span><%= @dog.introduce %></span>
	<%= link_to "編集", edit_dog_path(@dog.id) %>
	<li>
		<i class="fa fa-comment"></i>
		<a href="#comments"><%= @dog.post_comments.count %></a>
	</li>
	<div class="comment-list bt style-2" id="comments">
		<div class="float-wrapper">
			<h2 class="comment-count"><%= @dog.post_comments.count %>件コメント</h2>
		</div>
	</div>
	<div id="favorites_buttons_<%= @dog.id %>">
		<%= render 'favorites/favorite', dog: @dog %>
	</div>
	# 投稿する
	<div  id="comment_form">
		<%= render 'post_comments/comment_form', comment: @comment %>
	</div>
	# コメント一覧
	<div id='post_comments_buttons_<%= @dog.id %>'>
		<%= render 'post_comments/comments', comments: @comments %>
	</div>
</body>

